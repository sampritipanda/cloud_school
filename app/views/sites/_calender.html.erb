<script>
	$(function() {
		$("#datepcker").datepicker({
			dateFormat: "dd/mm/yy",
			onSelect: function(dateText, inst) {
				document.forms["classwork_get"].submit();
			}
		});
	});
</script>

<%= form_tag url_for(site_path(current_user.site)), :method => :get, :id => 'classwork_get' do%>
	<%= calendar_date_select_tag "datepicker", nil, :embedded => true, :year_range => 1.year.ago..0.years.ago,
		:onchange =>  "document.forms[\"classwork_get\"].submit();"
	%>
	<!--Date: <%= text_field_tag "datepicker" %>-->
<% end %>

<!--<textarea id="classwork" style="width: 647px; height: 140px;" readonly=""><%= @classwork %></textarea>-->

<div id="classwork" class="content-box-gray">
	<%= simple_format(@classwork) %>
</div>

<div id="homework" class="content-box-gray">
	<% if @homeworks =~ /No homework.+/ %>
		<%= simple_format(@homeworks) %>
	<% else %>
		<% @homeworks.each do |homework| %>
			<a href="<%= site_homework_path(current_user.site.id, homework.id) %>"><h4><%= homework.subject + " - " + homework.chapter + " - " + "#{@date.day}/#{@date.month}/#{@date.year}" %></h4></a>
			<%= simple_format(sanitize(truncate(homework.content, :length => 150))) %></li></ol></ul>
			<hr />
			<%= "Submission Date - #{homework.submission_date}"%>
			<% if @homeworks.last != homework and @homeworks.first != @homeworks.last %><br /><hr id="seperator" /><% end %>
		<% end %>
	<% end %>
</div>

<center><% if current_user.admin && @available %><a href="<%= edit_site_classwork_path(current_user.site.id, @classwork_id) %>">Edit this Classwork</a><br /><% end %></center>