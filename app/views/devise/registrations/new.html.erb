<div id="content"><center>
	<legend><h3>Sign up</h3></legend>
	
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
	  
	  <fieldset>
		  <div><!--[if lt IE 10]><%= f.label :name %><![endif]-->
		  <%= f.text_field :name, :autofocus => true, :placeholder => "Name" %></div>
		  
		  <div><!--[if lt IE 10]><%= f.label :email %><![endif]-->
		  <%= f.email_field :email, :placeholder => "Email" %></div>
		  
		  <div><!--[if lt IE 10]><%= f.label :username %><![endif]-->
		  <%= f.text_field :username, :placeholder => "Username" %></div>
		
		  <div><!--[if lt IE 10]><%= f.label :password %><![endif]-->
		  <%= f.password_field :password, :placeholder => "Password" %></div>
		
		  <div><!--[if lt IE 10]><%= f.label :password_confirmation %><![endif]-->
		  <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %></div>
		  
		  <div><%= f.label :birthday %>
		  <%= f.date_select(:birthday, :start_year => 1940) %></div>

		  <div><%= f.submit "Sign up", :class => "btn" %></div>
	  </fieldset>
	<% end %>
	
	<%= render "devise/shared/links" %>
</center></div>
